<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/orderCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/md_theme_primary"
        app:cardBackgroundColor="@color/md_theme_primary"
        app:strokeWidth="3dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/textOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_bold"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                android:text="ORDER #2024061234"/>

            <TextView
                android:id="@+id/textOrderer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_reguler"
                android:textSize="12sp"
                android:text="Name : Justin Hubner"/>

            <TextView
                android:id="@+id/textTotalItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_reguler"
                android:textSize="12sp"
                android:text="Total Item : 6"/>
            <TextView
                android:id="@+id/textGrandTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_reguler"
                android:textSize="12sp"
                android:text="Grand Total : Rp.20.000"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>